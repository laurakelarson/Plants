@{
    ViewData["Title"] = "Plants and Paws";
}
<style>
    .container {
        position: relative;
        text-align: center;
        color: white;
    }
    img {
        max-width: 100%;
        max-height: 100%;
        display: block; /* remove extra space below image */
    }
    /* Centered text */
    .centered {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>

    <html lang="en">
    
    <body class="text-center">
        <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-10"></div>
                <div class="col-2"></div>
            </div>
            <div class="row">
                <div class="col-2"></div>
                <div class="col-10">
                    <div class="container">
                        <img class="flex-fill" src="~/Resources/pexels-scott-webb-213727.jpg" />
                        <div class="centered">
                            <h1 class="cover-heading">@ViewData["Title"]</h1>
                            <p class="lead">Welcome</p>
                        </div>
                        
                    </div>
                    
                </div>
                <div class="col-2"></div>
            </div>
            <div class="row">
                <div class="col-2"></div>
                <div class="col-10"></div>
                <div class="col-2"></div>
            </div>
        </div>
    </body>
    </html>